@model Parking.Models.Booking

@{
    ViewData["Title"] = "Book Parking Place";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Parking Place</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("BookParking", "Booking", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.ParkingPlace, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.ParkingPlace, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ParkingPlace, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BookingDate, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.BookingDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
